{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "plugins": [],
  "rules": {
    "react/jsx-filename-extension": "off",
    "linebreak-style": "off",
    "jsx-a11y/label-has-associated-control": [ "error", {
      "required": {
        "some": [ "nesting", "id"  ]
      }
    }],
    "jsx-a11y/label-has-for": [ "error", {
      "required": {
        "some": [ "nesting", "id"  ]
      }
    }],
    "max-len": ["error", {
      "code": 120,
      "ignoreComments": true,
      "ignoreRegExpLiterals": true,
      "ignoreUrls": true,
      "tabWidth": 2
    }]
  }
}